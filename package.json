{
  "name": "SmartMaas NGSI Query",
  "author": "yclausen",
  "version": "0.1",
  "module": "smartmaas_ngsi_query.SmartMaasNGSIQuery",
  "media_types": ["application/json", "application/ld+json"],
  "formats": ["URL"],
  "overrides": [],
  "pull_accounting": true,
  "form": {
    "ngsi_type": {
      "type": "select",
      "label": "NGSI Type",
      "options": [{
        "text": "NGSIv2 (application/json)",
        "value": "NGSIv2"
      },
        {
        "text": "NGSI-LD (application/ld+json)",
        "value": "NGSI-LD"
      }]
    },
    "service": {
      "type": "text",
      "label": "FIWARE-Service (Tenant)",
      "placeholder": "fiware-service",
      "mandatory": true
    }
  }
}
